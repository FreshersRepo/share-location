<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="playlagom.sharelocation.MainActivity">

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Share Location"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#000000"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/vCenterPoint"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"></View>

    <TextView
        android:layout_marginTop="70dp"
        android:layout_below="@+id/vCenterPoint"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvPurpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First public release dedicated to"/>

    <TextView
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvPurpose"
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jubayer Ahmed"/>

    <ImageView
        android:layout_marginBottom="50dp"
        android:id="@+id/ivDedicatedTo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/tvName"
        android:layout_centerHorizontal="true"
        android:src="@drawable/jubayer" />

    <TextView
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v1.19.0"/>
</RelativeLayout>
