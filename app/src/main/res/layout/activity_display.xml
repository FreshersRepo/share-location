<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="playlagom.sharelocation.DisplayActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:layout_below="@+id/llMenu"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="playlagom.sharelocation.DisplayActivity" />

    <LinearLayout
        android:padding="10dp"
        android:id="@+id/llMenu"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivSelectedUser"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/current_user"/>

        <ImageView
            android:alpha="0.7"
            android:onClick="onClickMyCircle"
            android:id="@+id/ivMyCircle"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_people_outline_black_24dp"
            android:text="live friends"/>

        <ImageView
            android:alpha="0.7"
            android:onClick="onClickNotification"
            android:src="@drawable/ic_notifications_none_black_24dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live"/>
    </LinearLayout>
